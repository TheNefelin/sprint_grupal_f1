{{#> plantilla}}
    <table class="tablaClasificacion">
        <tr>
            <th>Posicion</th>
            <th>Escudo</th>
            <th>Piloto</th>
            <th>Total</th>
            {{#each bandera}}
                <th><img class="tablaClasificacion__paises" src={{puntaje}}></th>
            {{/each}}
        </tr>
        {{#each data.tabla}}
            {{#if idEsc}}
            <tr>
                <th>{{@key}}</th>
                <th><img class="tablaClasificacion__paises" src={{img}}></th>
                <th>{{nombre}}</th>
                <th>{{total}}</th>
                {{#each arrCarrera}}
                    <th>{{puntaje}}</th>
                {{/each}}
            </tr>
            {{/if}}
        {{/each}}
    </table>
{{/plantilla}}